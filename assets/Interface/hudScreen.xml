<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <useStyles filename="nifty-default-styles.xml" />
  <useControls filename="nifty-default-controls.xml" />
  <!-- <screen id="hudScreen" controller="mygame.MainScreenController">-->
    <screen id="hudScreen" controller="mygame.MainScreenController">
        <!-- <layer id="background" backgroundColor="#000f" childLayout="center">-->
            <!-- <image filename="Interface/hud-frame.png"></image> -->
            <!--<image filename="Interface/hud-frame.png"  width="100%" height="100%"/>-->
           <!--  <image filename="Interface/hud-frame.png" imageMode="resize:40,490,110,170,40,560,40,270,40,560,40,40" width="100%" height="100%"/>-->
       <!--  </layer>-->
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical"><!-- Black -->
            <panel id="panel_top" width="100%" height="5%" childLayout="horizontal" backgroundColor="#6600CC">  <!-- Purple -->
              <panel id="panel_top_left" width="10%" height="100%" childLayout="center" backgroundColor="#D1A319"> <!-- Gold -->
              </panel>
              <panel id="panel_top_middle" width="25%" height="100%" childLayout="center" backgroundColor="#E65C00"> <!-- Orange -->
                    <control id="txtLives" name="textfield" width="100%" text="Lives"></control>
              </panel>
              <panel id="panel_top_mid-right" width="25%" height="100%" childLayout="center" backgroundColor="#009900"> <!-- Dark Green -->
                  <control id="txtTimer" name="textfield" width="100%" text="Lives"></control>  
                  <!--<control id="txtTimer" name="label" color="#000000" text="Timer" width="100%" height="100%" /> --><!-- Black -->
              </panel>
              <panel id="panel_top_right" width="25%" height="100%" childLayout="center" backgroundColor="#00FFCC"> <!-- Teal -->
                 <!-- <text color="#000000" align="center" text="Test Me"></text> Does nothing. -->
                    <control id="txtScore" name="label" color="#000000" text="Score" width="100%" height="100%" /><!-- Black -->
              </panel>
            </panel>
            <panel id="panel_center" width="100%" height="90%" childLayout="horizontal">  
              <!-- This should usually be empty to allow the gamer to see the world. -->
            </panel>
            <panel id="panel_bottom" width="100%" height="5%" childLayout="horizontal" backgroundColor="#0000FF" >  <!-- Blue-->
                <panel id="panel_bottom_left" width="15%" height="100%" childLayout="center" backgroundColor="#FF00FF">  <!-- Pink-->
                        <control name="label" color="#000" text="123" width="100%" height="100%" /> <!-- Black -->
                </panel>
                <panel id="panel_bottom_middle" width="15%" height="100%" childLayout="center" backgroundColor="#FF0000" >  <!-- Red -->
                   <!--  <image filename="Interface/face1.png" valign="center" align="center" height="50%" width="30%" >
                    </image>  -->
                    <control id="btnGetScoreText" name="button" label="Get Score Text" width="100%" visibleToMouse="true" >
                        <interact onClick="getScoreText()"/>
                    </control>
                </panel>
                <panel id="panel_bottom_right" width="70%" height="100%" valign="center" backgroundColor="#FFFF00">  <!-- Yellow -->
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
